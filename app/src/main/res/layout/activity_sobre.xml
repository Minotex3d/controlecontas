<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3567EA"
    tools:context=".activity_sobre">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#3567EA"
        app:title="@string/app_add_sobre"
        app:titleTextColor="#FDFDFD"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="181dp"
        android:text="Versão: 1.0.0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="312dp"
        android:layout_height="88dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Este aplicativo foi criado para simplificar a gestão de contas a pagar, proporcionando uma maneira mais fácil, eficiente e produtiva."
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textViewProp"
        android:layout_width="312dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Foi desenvolvido como parte do projeto acadêmico da disciplina Tecnologia de Desenvolvimento para Internet II"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textViewDesc"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/textViewDesc"
        app:layout_constraintTop_toBottomOf="@+id/textViewDesc" />

    <TextView
        android:id="@+id/textViewDevs"
        android:layout_width="132dp"
        android:layout_height="25dp"
        android:layout_marginTop="196dp"
        android:text="Desenvolvedores: "
        app:layout_constraintBottom_toTopOf="@+id/buttonGitAndre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewProp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonGitAndre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:backgroundTint="#3567ea"
        android:text="Andre"
        app:layout_constraintBottom_toBottomOf="@+id/buttonGitAthos"
        app:layout_constraintStart_toEndOf="@+id/buttonGitAthos"
        app:layout_constraintTop_toTopOf="@+id/buttonGitAthos"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonGitAthos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#3567EA"
        android:text="Athos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDevs" />

</androidx.constraintlayout.widget.ConstraintLayout>